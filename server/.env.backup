# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL="file:./prisma/dev.db"

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_REFRESH_SECRET=your_refresh_secret_key_here_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# WhatsApp Admin Configuration
WHATSAPP_ADMIN_NUMBER=6282229261247
WHATSAPP_ENABLED=true
WHATSAPP_AUTO_REPLY=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security Configuration
CSRF_SECRET=your_csrf_secret_here_change_in_production

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./auth_info_baileys
WHATSAPP_QR_PATH=./public/qr

# Logging Configuration
LOG_LEVEL=info

# Next.js Configuration (for proxy)
NEXT_PUBLIC_API_URL=http://localhost:3001

# WebSocket Configuration
WS_ORIGIN=http://localhost:3000
